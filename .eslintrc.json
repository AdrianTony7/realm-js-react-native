{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "./header.eslintrc"
  ],
  "rules": {
    "no-restricted-globals": ["error", "globalThis"],
    "spaced-comment": ["error", "always", {"exceptions":["/"]}],
    "capitalized-comments": ["error", "always", {"ignoreConsecutiveComments": true }]
  },
  "env": {
    "es2020": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "settings": {
    "react": {
      "version": "16.6.3"
    }
  }
}
